<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.onboardregistration.StartProfileActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="@strings/almost_ready"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


    <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="13dp"
            android:gravity="center_horizontal|center_vertical"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2sp"
            android:text="@strings/enter_your_name_if_desired"
            android:textColor="#535353"
            android:textSize="14sp" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:text="@strings/you_can_choose_an_avatar"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarIv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="13dp"
                android:src="@drawable/ic_add_photo"
                app:civ_border_color="@android:color/transparent" />


        <TextView
                android:visibility="gone"
                android:id="@+id/changeAvatarTv"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#0075FF"
                android:text="@strings/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/profileSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="99dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical">

        <TextView
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="2sp"
                android:text="@strings/want_to_change_your_nickname"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        <EditText
                android:id="@+id/nickNameEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <TextView
                android:id="@+id/clearNickTv"
                android:layout_marginBottom="13dp"
                android:textSize="14sp"
                android:textColor="#0075FF"
                android:layout_gravity="center_horizontal"
                android:text="@strings/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
            android:id="@+id/startBtn"
            style="@style/Theme.MaterialComponents.Light"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@strings/start"
            android:textColor="@android:color/background_light"
            android:textSize="7pt" />

    </LinearLayout>
</ScrollView>