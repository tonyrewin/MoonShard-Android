<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/mainLayout"
        android:layout_height="wrap_content">

    <TextView
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:id="@+id/typeRoleAdmin"
            android:text="Модератор"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/descriptionTv"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#6F6F6F"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/typeRoleAdmin"
            android:text="Может удалять сообщения пользователей, добавлять пользователей в черный список."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/choosedIv"
            android:visibility="gone"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="13dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_check_circle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="16dp"
            android:layout_below="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#F5F5F5" />
</RelativeLayout>