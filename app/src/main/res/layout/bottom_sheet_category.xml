<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/bottomSheetCategory"
        android:visibility="gone"
        android:background="@drawable/bottom_sheet_background"
        android:layout_width="match_parent"
        android:layout_height="75dp">

    <ImageView
            android:layout_marginTop="11dp"
            android:id="@+id/categorySwipeBtn"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_line_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/categoryFilterName"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/categorySwipeBtn"
            android:text="Категория: по интересам"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/removeCategoryFilterBtn"
            android:layout_marginEnd="15dp"
            android:layout_alignBottom="@+id/categoryFilterName"
            android:layout_alignTop="@+id/categoryFilterName"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:src="@drawable/ic_remove_category_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>