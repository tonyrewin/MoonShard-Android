<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/swipeBtn"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_line_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <RelativeLayout
            android:layout_below="@+id/swipeBtn"
            android:id="@+id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:orientation="vertical"
            android:paddingStart="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:background="@android:color/white"
                android:src="@color/colorAccent"
                app:civ_border_color="@android:color/transparent" />


        <ImageView
                android:id="@+id/usersIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage"
                android:src="@drawable/ic_users" />

        <TextView
                android:maxLines="1"
                android:id="@+id/groupNameInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/usersIv"
                android:text="Group name"
                android:textColor="#333333"
                android:textSize="17sp" />

        <TextView
                android:id="@+id/valueMembersTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupNameInfoTv"
                android:layout_alignStart="@+id/usersIv"
                android:text="666 members, 30 online"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/locationValueTestTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueMembersTv"
                android:layout_alignStart="@+id/usersIv" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#F9F9F9" />

    </RelativeLayout>



    <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Button
            android:layout_weight="1"
            android:layout_below="@+id/mainLayout"
            android:id="@+id/readGroupBtn"
            style="@style/Theme.MaterialComponents.Light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background_transparent"
            android:textColor="#0075FF"
            android:gravity="center"
            android:text="ЧИТАТЬ" />

    <Button
            android:layout_weight="1"
            android:layout_toRightOf="@+id/readBtn"
            android:layout_below="@+id/mainLayout"
            android:id="@+id/joinGroupBtn"
            style="@style/Theme.MaterialComponents.Light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="ПРИСОЕДИНИТЬСЯ"
            android:textColor="@android:color/background_light"
            android:textSize="7pt" />

    </LinearLayout>

</RelativeLayout>