<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#FFFFFF"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/swipeInfoBtn"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_line_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:orientation="vertical"
            android:paddingStart="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:background="@android:color/white"
                android:src="@color/colorAccent"
                app:civ_border_color="@android:color/transparent" />


        <ImageView
                android:id="@+id/usersIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage"
                android:src="@drawable/ic_users" />

        <TextView
                android:id="@+id/groupNameInfoContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/usersIv"
                android:text="Group name"
                android:textColor="#333333"
                android:textSize="17sp" />

        <TextView
                android:id="@+id/valueMembersInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupNameInfoContentTv"
                android:layout_alignStart="@+id/usersIv"
                android:text="666 members, 30 online"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/locationValueInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueMembersInfoTv"
                android:layout_alignStart="@+id/usersIv"
                android:text="130 m away" />


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#F9F9F9" />

    </RelativeLayout>

        <LinearLayout
                android:id="@+id/buttonsTop"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:background="@drawable/button_background_transparent"
                    android:textColor="#0075FF"
                    android:id="@+id/readBtn2"
                    style="@style/Theme.MaterialComponents.Light"
                    android:layout_width="159dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Читать" />

            <Button
                    android:layout_marginStart="8dp"
                    android:layout_toRightOf="@+id/readBtn"
                    android:layout_below="@+id/mainLayout"
                    android:id="@+id/joinBtn2"
                    style="@style/Theme.MaterialComponents.Light"
                    android:layout_width="159dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="Присоединиться"
                    android:textColor="@android:color/background_light"
                    android:textSize="7pt" />

        </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="7dp"
            android:text="Местоположение"
            android:textColor="#9B9BB6"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/locationInfoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            tools:text="Улица Парковая, Одинцово, Московская область"
            android:textColor="#333333"
            android:textSize="16sp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#EFEFF4" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:text="О чате"
            android:textColor="#9B9BB6"
            android:textSize="14sp" />


    <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Бухаем пивас у памятника Грибоедову. Скидываемся по сотке на трехлитровую сиську!"
            android:textColor="#333333"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:background="@drawable/button_background_transparent"
                android:textColor="#0075FF"
                android:id="@+id/readBtn"
                style="@style/Theme.MaterialComponents.Light"
                android:layout_width="159dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Читать" />

        <Button
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/readBtn"
                android:layout_below="@+id/mainLayout"
                android:id="@+id/joinBtn"
                style="@style/Theme.MaterialComponents.Light"
                android:layout_width="159dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="Присоединиться"
                android:textColor="@android:color/background_light"
                android:textSize="7pt" />



    </LinearLayout>



</RelativeLayout>