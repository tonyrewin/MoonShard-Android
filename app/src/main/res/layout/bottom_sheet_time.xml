<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottomSheetTime"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/view_pager_bottom_sheet_behavior">

    <TextView
            android:id="@+id/todayTv"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Сегодня"
            android:textColor="#000000"
            android:textSize="14sp" />

    <View
            android:id="@+id/todayView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/todayTv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#EFEFF4" />

    <TextView
            android:id="@+id/tomorrowTv"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/todayView"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Завтра"
            android:textColor="#000000"
            android:textSize="14sp" />

    <View
            android:id="@+id/tomorrowView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tomorrowTv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#EFEFF4" />

    <TextView
            android:id="@+id/weekendTv"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/tomorrowView"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="В выходные"
            android:textColor="#000000"
            android:textSize="14sp" />

    <View
            android:id="@+id/weekendView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/weekendTv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#EFEFF4" />

    <TextView
            android:id="@+id/chooseDateTv"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_below="@+id/weekendView"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Выбрать дату"
            android:textColor="#000000"
            android:textSize="14sp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/chooseDateTv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#EFEFF4" />

</RelativeLayout>