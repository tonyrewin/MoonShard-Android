<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="?android:attr/selectableItemBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingStart="16dp">

    <RelativeLayout
            android:layout_marginTop="17dp"
            android:id="@+id/chatListProfileImageContainer"
            android:layout_width="54.5dp"
            android:layout_height="54.5dp">

        <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="@android:color/transparent"
                android:background="@android:color/transparent"
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:src="@android:color/darker_gray" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/onlineStatusIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@color/colorAccent"
                android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/chatListProfileImageContainer"
            android:orientation="vertical"
            android:visibility="visible">

        <TextView
                android:id="@+id/chatItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ChatName"
                android:textColor="#333333"
                android:textSize="17sp"
                android:visibility="invisible" />

        <TextView
                android:id="@+id/lastMessageChatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MessageText"
                android:textColor="#9B9BB6"
                android:textSize="14sp"
                android:visibility="invisible" />

    </LinearLayout>

    <ImageView
            android:id="@+id/lastMessageReadState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lastMessageDate"
            android:layout_alignBottom="@+id/lastMessageDate"
            android:layout_toStartOf="@+id/lastMessageDate"
            android:scaleType="center"
            android:src="@drawable/ic_checked_message_state"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/lastMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:text="14:14"
            android:textColor="#9B9BB6"
            android:textSize="14sp"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/unreadMessageCount"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_below="@+id/lastMessageDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/unread_message_count_background"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

    <View
            android:layout_alignParentBottom="true"
            android:background="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
</RelativeLayout>