<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#FFFFFF"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingStart="16dp">

    <RelativeLayout
            android:layout_marginTop="17dp"
            android:id="@+id/kek"
            android:layout_width="54.5dp"
            android:layout_height="54.5dp">

        <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="@android:color/transparent"
                android:background="@android:color/white"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:src="@color/colorAccent" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="#FF6161" />

    </RelativeLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/kek"
            android:orientation="vertical">

        <TextView
                android:id="@+id/nameChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanevsky"
                android:textColor="#333333"
                android:textSize="17sp" />

        <TextView
                android:id="@+id/lastMessageChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message text"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

    </LinearLayout>

    <ImageView
            android:id="@+id/checkMessageIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/timeOrDayTv"
            android:layout_alignBottom="@+id/timeOrDayTv"
            android:layout_toStartOf="@+id/timeOrDayTv"
            android:scaleType="center"
            android:src="@drawable/ic_check_message" />

    <TextView
            android:id="@+id/timeOrDayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:text="14:14"
            android:textColor="#9B9BB6"
            android:textSize="14sp" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/timeOrDayTv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="17dp"
            android:background="@android:color/white"
            android:src="@color/catalyst_redbox_background" />

    <View
            android:layout_alignParentBottom="true"
            android:background="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</RelativeLayout>