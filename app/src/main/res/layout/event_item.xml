<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_event_item"
        android:orientation="vertical">

    <TextView
            android:layout_marginBottom="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:id="@+id/nameEvent"
            android:textSize="17sp"
            android:textColor="#333333"
            android:text="CUDDLE PARTY 17dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginEnd="16dp"
            android:layout_alignLeft="@+id/nameEvent"
            android:layout_toLeftOf="@+id/avatarEvent"
            android:layout_marginBottom="10dp"
            android:text="Обнимательная вечеринка 17 декабря в клубе Газгольдер"
            android:id="@+id/descriptionTv"
            android:layout_below="@+id/nameEvent"
            android:textSize="14sp"
            android:textColor="#535353"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarEvent"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_mutabor"
            android:layout_alignParentEnd="true"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    <Button
            android:layout_marginEnd="18dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/descriptionTv"
            android:background="@drawable/button_background_transparent"
            android:textColor="#0075FF"
            android:id="@+id/showGroupBtn"
            style="@style/Theme.MaterialComponents.Light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ПОСМОТРЕТЬ ГРУППУ" />

</RelativeLayout>