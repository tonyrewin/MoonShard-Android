<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ui.fragments.onboard.AcquaintanceFragment">

    <TextView
            android:id="@+id/skipBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:paddingEnd="15dp"
            android:text="Пропустить"
            android:textColor="#0075FF"
            android:textSize="16sp" />

    <ImageView
            android:id="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_acquaintance_onboarding" />

    <TextView
            android:id="@+id/textViewBold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image"
            android:textSize="20sp"
            android:text="Знакомься с новыми людьми"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.62sp"
            android:gravity="center_horizontal|top"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewBold"
            android:textSize="16sp"
            android:text=" Мы создали локальные гео-чаты по интересам, где каждый найдет себе компанию по душе"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>