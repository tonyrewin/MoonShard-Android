<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.chat.info.tickets.AddNewTypeTicketFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Управление билетами"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            <TextView
                    android:layout_marginEnd="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Готово"
                    android:textColor="#0075FF"
                    android:textSize="14sp" />


        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Входной билет Save 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="14dp"
                android:layout_marginStart="9.5dp"
                android:text="Тип билета"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:textColorHint="#DDDDDD"
                android:hint="Введите тип"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="13dp"
                android:id="@+id/typeEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <TextView
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="9.5dp"
                android:text="Пояснение"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:textColorHint="#DDDDDD"
                android:hint="Введите пояснение"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="13dp"
                android:id="@+id/descriptionEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <TextView
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="9.5dp"
                android:text="Стоимость, ₽"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:textColorHint="#DDDDDD"
                android:hint="Введите стоимость"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="13dp"
                android:id="@+id/costEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <TextView
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="9.5dp"
                android:text="Количество билетов"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:textColorHint="#DDDDDD"
                android:hint="Введите количество"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="13dp"
                android:id="@+id/quantityEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <androidx.appcompat.widget.AppCompatButton
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0075FF"
                android:fontFamily="@font/roboto_regular"
                android:text="СОХРАНИТЬ"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>