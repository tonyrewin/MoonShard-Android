<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.chat.info.event.admin_permissions.AdminPermissionFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@strint/adminstator_permissions"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/readyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_new_chat"
                    android:text="@string/done"
                    android:textColor="#0075FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />


        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:id="@+id/profileSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/checkBox"
                android:id="@+id/contactAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                tools:src="@color/colorPrimary" />

        <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/contactAvatar"
                android:text="Oleg Petrov"
                android:textColor="#DE000000"
                android:textSize="16sp" />

        <TextView
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/assignTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTv"
                android:layout_alignStart="@+id/nameTv"
                android:layout_marginTop="4dp"
                android:text="Ordered by Kanevsky"
                android:textColor="#6F6F6F" />

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/permissionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical">

        <TextView
                android:id="@+id/levelPermissionTv"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="@string/permission_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:layout_below="@+id/levelPermissionTv"
                android:id="@+id/typeAdminRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </RelativeLayout>
</LinearLayout>