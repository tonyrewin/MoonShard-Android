<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Покупка билетов"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/closeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="17dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Закрыть"
                    android:textColor="#0075FF"
                    android:textSize="14sp" />


        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/toolBar"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:id="@+id/cardInfo"
                android:layout_marginTop="8dp"
                android:background="@drawable/layout_settings_bg"
                app:cardCornerRadius="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/avatarTicket"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:background="@drawable/bck_rounded"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/party_test" />

            <TextView
                    android:id="@+id/labelTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatarTicket"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/montserrat_bold"
                    tools:text="Валерий Меладзе"
                    android:textColor="#333333"
                    android:textSize="17sp" />

            <TextView
                    android:layout_marginBottom="7dp"
                    android:id="@+id/startDateTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelTicket"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="4.5dp"
                    android:fontFamily="@font/roboto_regular"
                    tools:text="1 июля 2020 г. в 23:00"
                    android:textColor="#6F6F6F"
                    android:textSize="14sp" />

        </RelativeLayout>
        </androidx.cardview.widget.CardView>

            <RelativeLayout
                    android:layout_marginBottom="93dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:layout_below="@+id/cardInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                        android:overScrollMode="never"
                        android:id="@+id/ticketsRv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="93dp">

        <View
                android:layout_alignParentStart="true"
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/toolbar_dropshadow"/>

        <TextView
                android:layout_below="@+id/shadow"
                android:id="@+id/ticketsCounterTv"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16.5dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000000"
                android:text="0 билетов"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/costTv"
                android:layout_marginRight="21dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="0 ₽"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="5.5dp"
                android:layout_below="@+id/ticketsCounterTv"
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#0075FF"
                android:fontFamily="@font/roboto_regular"
                android:text="Далее"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

    </RelativeLayout>

    <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>