<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F9F9F9"
        tools:context=".ui.fragments.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/change_profile"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/readyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:src="@drawable/ic_new_chat"
                    android:text="@string/done"
                    android:textColor="#0075FF"
                    android:textSize="14sp" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarIv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/ic_add_photo" />

        <TextView
                android:id="@+id/nickNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/avatarIv"
                android:layout_toEndOf="@+id/avatarIv"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/name"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <EditText
                android:id="@+id/nameTv"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_below="@+id/nickNameTv"
                android:layout_alignStart="@+id/nickNameTv"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:textSize="16sp"
                tools:text="@string/kanaevsky" />

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/about_myself"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <EditText
                android:layout_marginBottom="17dp"
                android:id="@+id/descriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/roboto_regular"
                android:minWidth="249dp"
                android:minHeight="40dp"
                android:paddingStart="12dp"
                android:paddingTop="7dp"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:textColor="#333333"
                android:textSize="16sp"
                tools:text="@string/any_details_for_example_age" />

    </LinearLayout>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

</LinearLayout>