<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.chat.info.ChatInfoFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Информация"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/changeChatInfoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_new_chat"
                    android:text="Изменить"
                    android:textColor="#0075FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="54.5dp"
                android:layout_height="54.5dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:background="@android:color/white"
                android:src="@color/colorAccent"
                app:civ_border_color="@android:color/transparent" />


        <ImageView
                android:id="@+id/usersIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage"
                android:src="@drawable/ic_users" />

        <TextView
                android:id="@+id/groupNameInfoContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/usersIv"
                android:text="Group name"
                android:textColor="#333333"
                android:textSize="17sp" />

        <TextView
                android:id="@+id/valueMembersInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupNameInfoContentTv"
                android:layout_alignStart="@+id/usersIv"
                android:text="666 members, 30 online"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/locationValueInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueMembersInfoTv"
                android:layout_alignStart="@+id/usersIv"
                android:text="130 m away" />


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#F9F9F9" />

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

        <TextView
                android:layout_marginBottom="6dp"
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="О чате" />


        <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Местоположение"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:layout_marginBottom="16dp"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Улица Парковая, Одинцово, Россия"
                android:textColor="#333333"
                android:textSize="16sp" />


        <View
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

        <TextView
                android:layout_marginBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Категория"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:layout_marginBottom="12dp"
                android:id="@+id/categoryInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По интересам"
                android:textColor="#333333"
                android:textSize="16sp" />


        <View
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

        <TextView
                android:layout_marginBottom="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Описание"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:layout_marginBottom="17dp"
                android:id="@+id/descriptionInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание вфыв фвфвфв ф"
                android:textColor="#333333"
                android:textSize="16sp" />


    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/notificationsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="13dp"
                android:text="Уведомление"
                android:textColor="#333333"
                android:textSize="16sp" />


        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/notificationsTv"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp"
                android:theme="@style/SCBSwitch" />

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <LinearLayout
                android:id="@+id/addNewMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="21dp"
                    android:src="@drawable/ic_user_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="13dp"
                    android:text="Добавить участника"
                    android:textSize="16sp"
                    android:textColor="#0075FF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="8dp"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/membersInfoRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>


    <RelativeLayout
            android:id="@+id/leaveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/leaveTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="13dp"
                android:text="Покинуть группу"
                android:textColor="#FF6060"
                android:textSize="16sp" />


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/leaveTv"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_next_gray"
                android:theme="@style/SCBSwitch" />

    </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>