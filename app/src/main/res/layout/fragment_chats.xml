<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.ChatsFragment">


    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">


        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/searchLayoutToolbar"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="19dp"
                    android:layout_below="@+id/swipeBtn"
                    android:layout_toLeftOf="@+id/cancelBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/findEd"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/edit_text_bottom_sheet"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="30dp"
                        android:paddingEnd="5dp" />

                <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginStart="13dp"
                        android:src="@drawable/ic_search"
                        android:layout_width="14dp"
                        android:layout_height="14dp"/>

            </RelativeLayout>


            <TextView
                    android:layout_marginStart="15dp"
                    android:id="@+id/cancelBtn"
                    android:textStyle="bold"
                    android:layout_marginEnd="19dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:textColor="#0075FF"
                    android:text="Отмена"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/defaultToolbar"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/find"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="center|start"
                    android:src="@drawable/ic_search" />

            <TextView
                    android:id="@+id/titleToolBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chats"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <ImageView
                    android:id="@+id/newChat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center|end"
                    android:layout_weight="0"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_new_chat" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatsRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

</LinearLayout>