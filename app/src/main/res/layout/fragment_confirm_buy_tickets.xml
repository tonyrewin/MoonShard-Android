<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.mychats.chat.info.tickets.BuyTicketsFragment">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white"
                android:elevation="6dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:padding="0dp">

                <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_arrow_back" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Подтверждение заказа"
                        android:textColor="#333333"
                        android:textSize="14sp" />

            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_marginBottom="93dp"
            android:layout_below="@+id/toolBar"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:id="@+id/cardInfo"
                android:layout_marginTop="8dp"
                android:background="@drawable/layout_settings_bg"
                app:cardCornerRadius="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="13dp"
                        android:id="@+id/nameTicket"
                        android:layout_marginStart="9dp"
                        android:text="Save 2019 - Arma at Mutabor"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/labelTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameTicket"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="9dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="1 июля 2020 г. в 23:00"
                        android:textColor="#6F6F6F"
                        android:textSize="14sp" />

                <TextView
                        android:layout_marginBottom="14dp"
                        android:id="@+id/startDateTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelTicket"
                        android:layout_marginStart="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Москва. Мутабор клуб."
                        android:textColor="#0075FF"
                        android:textSize="14sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


            <RelativeLayout
                    android:layout_marginStart="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:layout_below="@+id/cardInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/counterTicketsTv"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="3 билета"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <View
                        android:background="#F5F5F5"
                        android:id="@+id/view"
                        android:layout_below="@+id/counterTicketsTv"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>


                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_below="@+id/view"
                            android:id="@+id/confirmTicketsRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="93dp">

        <View
                android:layout_alignParentStart="true"
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/toolbar_dropshadow"/>

        <TextView
                android:layout_below="@+id/shadow"
                android:id="@+id/ticketsCounterTv"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16.5dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000000"
                android:text="К оплате"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginRight="21dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="1500 ₽"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="5.5dp"
                android:layout_below="@+id/ticketsCounterTv"
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#0075FF"
                android:fontFamily="@font/roboto_regular"
                android:text="Оплатить"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>

