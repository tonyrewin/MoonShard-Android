<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Подтверждение заказа"
                    android:textColor="#333333"
                    android:textSize="14sp" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolBar"
            android:layout_marginBottom="93dp"
            android:fillViewport="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/layout_settings_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/nameTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Save 2019 - Arma at Mutabor"
                            android:textColor="#333333"
                            android:textSize="17sp" />

                    <TextView
                            android:id="@+id/startDateTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nameTicket"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="9dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="1 июля 2020 г. в 23:00"
                            android:textColor="#6F6F6F"
                            android:textSize="14sp" />

                    <TextView
                            android:id="@+id/locationTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/startDateTicket"
                            android:layout_marginStart="11dp"
                            android:layout_marginBottom="14dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Москва. Мутабор клуб."
                            android:textColor="#0075FF"
                            android:textSize="14sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardInfo"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/layout_settings_bg">

                <TextView
                        android:id="@+id/counterTicketsTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="3 билета"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/counterTicketsTv"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="#F5F5F5" />


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/confirmTicketsRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:overScrollMode="never" />


            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF">

        <View
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/toolbar_dropshadow" />

        <TextView
                android:id="@+id/ticketsCounterTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shadow"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16.5dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_regular"
                android:text="К оплате"
                android:textColor="#000000"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/costTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginRight="21dp"
                android:fontFamily="@font/roboto_medium"
                android:text="0 ₽"
                android:textColor="#000000"
                android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketsCounterTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5.5dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#0075FF"
                android:fontFamily="@font/roboto_regular"
                android:text="Оплатить"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

    </RelativeLayout>

    <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>

