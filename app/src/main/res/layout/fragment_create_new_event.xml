<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.create.event.CreateNewEventFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:color/white"
                    android:elevation="6dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:padding="0dp">

                    <ImageView
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_arrow_back" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Новый групповой чат"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/newChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="14dp"
                            android:src="@drawable/ic_new_chat"
                            android:text="Готово"
                            android:textColor="#0075FF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                </RelativeLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                    android:id="@+id/profileSettingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical">

                <TextView
                        android:textSize="14sp"
                        android:textColor="#9B9BB6"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="11dp"
                        android:text="Название"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp"
                        android:hint="Введите название"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/nameTv"
                        android:layout_width="249dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:maxLength="255"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Местоположение"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Улица Парковая, Одинцово, Россия"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="7dp"
                        android:text="Изменить"
                        android:textColor="#0075FF"
                        android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="horizontal">


                <RelativeLayout
                        android:id="@+id/dateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="16dp"
                            android:text="Дата начала"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <TextView
                            android:id="@+id/dateTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="right"
                            android:layout_marginTop="19dp"
                            android:layout_marginEnd="14dp"
                            android:layout_marginBottom="15dp"
                            android:text="13 декабря"
                            android:textColor="#8A000000"
                            android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/timesLayout"
                    android:layout_below="@+id/dateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/longEvenTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:text="Длительность события"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/longEvenTv"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="15dp"
                        android:text="3 дня"
                        android:textColor="#8A000000"
                        android:textSize="14sp" />


            </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text="Выберете категорию"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoriesRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="56dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text="Привязать к"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/groupsRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>