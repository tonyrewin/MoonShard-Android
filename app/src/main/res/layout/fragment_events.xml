<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@android:color/white"
        tools:context=".ui.fragments.mychats.chat.EventsFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/eventsRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <LinearLayout
            android:paddingStart="10dp"
            android:id="@+id/createNewEventLayout"
            android:visibility="visible"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#333333"
                android:text="Упс! Тут пусто"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/createTextView"
                android:layout_marginEnd="97dp"
                android:textSize="14sp"
                android:textColor="#535353"
                android:text="Создайте свое первое событие и оно появится тут в списке"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_transparent"
                android:textColor="#0075FF"
                android:id="@+id/addNewEventBtn"
                style="@style/Theme.MaterialComponents.Light"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ДОБАВИТЬ МЕРОПРИЯТИЕ" />


    </LinearLayout>

</LinearLayout>