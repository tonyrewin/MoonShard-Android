<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#F9F9F9"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.profile.history.HistoryTransactionFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Твой кошелек"
                    android:textColor="#333333"
                    android:textSize="14sp" />


        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/cashFlowTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Движение средств"
                android:textColor="#333333"
                android:textSize="14sp" />


        <RelativeLayout
                android:id="@+id/topUpWalletBtn"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_below="@+id/cashFlowTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/wallet_button_default">

            <TextView
                    android:id="@+id/topUpWalletTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Пополнение"
                    android:textColor="#333333"
                    android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/writeOffBtn"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_below="@+id/cashFlowTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/topUpWalletBtn"
                android:background="@drawable/wallet_button_default">

            <TextView
                    android:id="@+id/writeOffTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Списание"
                    android:textColor="#333333"
                    android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/dateLayout"
                android:layout_width="89dp"
                android:layout_height="32dp"
                android:layout_below="@+id/cashFlowTv"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/writeOffBtn"
                android:background="@drawable/wallet_button_active">

            <TextView
                    android:layout_marginStart="20dp"
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="7 апр"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            <ImageView
                    android:layout_marginEnd="7dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_cancel_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
                android:id="@+id/calendarBtn"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cashFlowTv"
                android:src="@drawable/ic_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topUpWalletBtn" />
    </RelativeLayout>

</RelativeLayout>