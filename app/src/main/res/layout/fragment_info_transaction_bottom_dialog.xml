<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.profile.history.InfoTransactionBottomDialogFragment">

    <ImageView
            android:id="@+id/lineIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_line_bottom_sheet" />

    <ImageView
            android:id="@+id/typeOperationIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineIv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_replenishment_wallet" />

    <TextView
            android:fontFamily="@font/roboto_regular"
            android:textColor="#333333"
            android:text="@string/refill_wallet"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineIv"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/typeOperationIv" />

    <TextView
            android:fontFamily="@font/roboto_regular"
            android:textColor="#0075FF"
            android:text="+5000 â‚½"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineIv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp" />


    <RelativeLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeOperationIv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:background="#F9F9F9">

        <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="7 april, thursday"
                android:textColor="#9B9BB6"
                android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateLayout">


        <LinearLayout
                android:layout_toStartOf="@+id/copyBtn"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="18dp">

            <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From to: Kanaevsky" />

            <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Success" />

            <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"
                    android:text="Transaction code: 0x2312" />

            <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 5000 RUB" />

            <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine: 10 RUB" />

        </LinearLayout>

        <ImageView
                android:id="@+id/copyBtn"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>



</RelativeLayout>