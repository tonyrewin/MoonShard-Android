<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.mychats.chat.info.ManageChatFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Управление группой"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/readBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_new_chat"
                    android:text="Готово"
                    android:textColor="#0075FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
            android:id="@+id/profileSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarIv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_add_photo" />

        <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:id="@+id/nameTv"
                android:layout_toRightOf="@+id/avatarIv"
                android:text="Название"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:layout_below="@+id/nameTv"
                android:layout_alignLeft="@+id/nameTv"
                android:id="@+id/nameEt"
                android:maxLength="255"
                android:layout_width="249dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />


        <TextView
                android:layout_below="@+id/nameEt"
                android:layout_marginTop="10dp"
                android:layout_marginStart="11dp"
                android:id="@+id/descriptionTv"
                android:text="Описание"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:text="Save. Фестиваль, предвосхитивший Outline и запустивший цепную реакцию массовых электронных"
                android:layout_alignLeft="@+id/descriptionTv"
                android:layout_below="@+id/descriptionTv"
                android:id="@+id/descriptionEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="5dp"
                android:layout_marginBottom="20dp"
                android:paddingEnd="5dp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="horizontal">

        <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:id="@+id/manageTv"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="Управление участниками"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:background="#F5F5F5"
                android:layout_marginBottom="13dp"
                android:layout_below="@+id/manageTv"
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_below="@+id/viewOne"
                android:id="@+id/membersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="13dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_members"
                android:id="@+id/icMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/membersTv"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/icMember"
                android:text="Участники"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#333333"
                android:layout_marginEnd="22dp"
                android:layout_alignParentRight="true"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

        <View
                android:layout_marginTop="15dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="13dp"
                android:layout_below="@+id/membersLayout"
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        <RelativeLayout
                android:layout_marginBottom="16dp"
                android:id="@+id/adminsLayout"
                android:layout_below="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="13dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_admin_star"
                android:id="@+id/icAdmins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/adminsTv"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/icAdmins"
                android:text="Администраторы"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#333333"
                android:layout_marginEnd="22dp"
                android:layout_alignParentRight="true"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="horizontal">

        <TextView
                android:layout_marginStart="18dp"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="14dp"
                android:text="Покинуть группу"
                android:textSize="16sp"
                android:textColor="#FF6060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginEnd="11dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/ic_next_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>