<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.chat.info.chat.ManageChatFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/event_management"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/readBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_new_chat"
                    android:text="@string/done"
                    android:textColor="#0075FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolBar">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/profileSettingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarIv"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_add_photo" />

                <TextView
                        android:textColor="#9B9BB6"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/avatarIv"
                        android:text="@string/title" />

                <EditText
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        tools:text="@string/save_2019"
                        android:id="@+id/nameEt"
                        android:layout_width="249dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/nameTv"
                        android:layout_alignLeft="@+id/nameTv"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="text"
                        android:maxLength="255"
                        android:maxLines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="5dp" />

                <LinearLayout
                        android:id="@+id/locationLayout"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="11dp"
                        android:layout_below="@+id/nameEt"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp"
                        android:id="@+id/locationTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location" />

                <TextView
                        android:layout_marginEnd="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/locationValueTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        tools:text="@string/parkovaya_street_odintsovo_russia"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/changeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/edit"
                        android:textColor="#0075FF"
                        android:textSize="14sp" />


                <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
                        android:background="#F5F5F5" />

                </LinearLayout>

                <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp"
                        android:id="@+id/descriptionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/locationLayout"
                        android:layout_marginStart="11dp"
                        android:text="@string/description" />

                <EditText
                        android:hint="@string/enter_event_description"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:id="@+id/descriptionEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/descriptionTv"
                        android:layout_alignStart="@+id/descriptionTv"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_edittext"
                        android:paddingStart="8dp"
                        android:paddingEnd="5dp"
                        android:minHeight="80dp" />

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/dateStartEvent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                    <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/the_date_of_the_beginning"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/dateTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="22dp"
                            tools:text="@string/december_13th"
                            android:textColor="#8A000000"
                            android:textSize="14sp" />

                </RelativeLayout>

                <View
                        android:id="@+id/viewDate"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="15dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/timesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/event_duration"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="22dp"
                            tools:text="@string/manage_event_text196"
                            android:textColor="#8A000000"
                            android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/manageTicketsBtn"
                    android:background="@drawable/layout_manage_tickets_bg"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                <ImageView
                        android:id="@+id/manageTicketsIv"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_ticket_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginStart="13dp"
                        android:layout_toEndOf="@+id/manageTicketsIv"
                        android:layout_centerVertical="true"
                        android:text="@string/ticket_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="horizontal">

                <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/manageTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="@string/member_management"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                <View
                        android:id="@+id/viewOne"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/manageTv"
                        android:layout_marginBottom="13dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/membersLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewOne">

                    <ImageView
                            android:id="@+id/icMember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_members" />

                    <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/membersTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/icMember"
                            android:text="@string/members"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <TextView
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/occupantsCountTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="22dp"
                            tools:text="@string/manage_event_text198"
                            android:textColor="#333333" />

                </RelativeLayout>

                <View
                        android:id="@+id/viewTwo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/membersLayout"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="13dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/adminsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewTwo"
                        android:layout_marginBottom="16dp">

                    <ImageView
                            android:id="@+id/icAdmins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_admin_star" />

                    <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/adminsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/icAdmins"
                            android:text="@string/administrators"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <TextView
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/adminsCountTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="22dp"
                            tools:text="@string/manage_event_text198"
                            android:textColor="#333333" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/destroyRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="horizontal">

                <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="13dp"
                        android:text="@string/delete_group"
                        android:textColor="#FF6060"
                        android:textSize="16sp" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/ic_next_gray" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>