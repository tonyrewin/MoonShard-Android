<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#F9F9F9"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.profile.present_ticket.PresentTicketFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/give_a_ticket"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_bold" />



        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/actionLayout"
            android:layout_below="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <ImageView
                android:id="@+id/presentIv"
                android:layout_marginTop="15dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_present"
                android:layout_width="34dp"
                android:layout_height="34dp"/>

        <TextView
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_toRightOf="@+id/presentIv"
                android:lineSpacingExtra="2sp"
                android:translationY="-0.8sp"
                android:gravity="top"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="@string/just_pick_a_ticket_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/closePromptBtn"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_cancel_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
            android:id="@+id/ticketPresentRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>