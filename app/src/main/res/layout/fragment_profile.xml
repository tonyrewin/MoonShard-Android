<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Профиль"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:id="@+id/profileSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/layout_settings_bg">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/avatarIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_add_photo" />

        <TextView
                android:fontFamily="@font/montserrat_bold"
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/avatarIv"
                android:textColor="#333333"
                android:textSize="17sp"
                tools:text="Kanaevsky" />

        <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/myJid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTv"
                android:layout_alignLeft="@+id/nameTv"
                android:layout_marginTop="1dp"
                android:textColor="#9B9BB6"
                android:textSize="14sp"
                tools:text="'@'kanaevsky1989" />

        <TextView
                android:id="@+id/emailTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneTv"
                android:layout_alignLeft="@+id/phoneTv"
                android:text="user@example.com"
                android:textColor="#9B9BB6"
                android:textSize="14sp"
                android:visibility="gone" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_next_gray" />

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:text="О себе"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/descriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="16dp"
                tools:text="Save. Фестиваль, предвосхитивший Outline и запустивший цепную реакцию массовых электронных"
                android:textColor="#333333"
                android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <RelativeLayout
                android:id="@+id/walletBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">

            <ImageView
                    android:id="@+id/presentIcon"
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_wallet" />

            <TextView
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/presentIcon"
                    android:text="Кошелек" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:layout_marginEnd="13dp"
                android:layout_marginStart="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:id="@+id/myTicketBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">


            <ImageView
                    android:id="@+id/ticketIcon"
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_ticket_blue" />

            <TextView
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/ticketIcon"
                    android:text="Мои билеты" />
            
            
            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/ticketsCount"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/ic_rec_circle_backgorund"
                    android:layout_toLeftOf="@+id/nextMyTicketIv"
                    android:layout_width="22dp"
                    android:layout_height="22dp">

                <TextView
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#FFFFFF"
                        android:text="1"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <ImageView
                    android:id="@+id/nextMyTicketIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:layout_marginEnd="13dp"
                android:layout_marginStart="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:id="@+id/presentTicketLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

            <ImageView
                    android:id="@+id/walletIcon"
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_present" />

            <TextView
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/walletIcon"
                    android:text="Подарить билет" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>