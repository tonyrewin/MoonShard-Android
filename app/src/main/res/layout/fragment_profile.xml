<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.settings.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Информация"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/changeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_new_chat"
                    android:text="Изменить"
                    android:textColor="#0075FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:id="@+id/avatarIv"
                android:src="@color/blue"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

        <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/nickNameTv"
                android:layout_toEndOf="@+id/avatarIv"
                android:text="Kanaevsky"
                android:textColor="#DE000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@+id/nickNameTv"
                android:layout_alignStart="@+id/nickNameTv"
                android:text="Онлайн"
                android:textColor="#0075FF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/editIv"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="18dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>



    <LinearLayout
            android:orientation="vertical"
            tools:ignore="RtlSymmetry"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:text="О себе"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="16dp"
                android:text="Save. Фестиваль, предвосхитивший Outline и запустивший цепную реакцию массовых электронных"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:id="@+id/descriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <RelativeLayout
            android:orientation="vertical"
            tools:ignore="RtlSymmetry"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="15dp"
                android:id="@+id/notificationsTv"
                android:text="Уведомления"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        <androidx.appcompat.widget.SwitchCompat
                android:checked="true"
                android:layout_marginEnd="14dp"
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/notificationsTv"
                android:layout_alignParentEnd="true"
                android:theme="@style/SCBSwitch" />

    </RelativeLayout>
</LinearLayout>