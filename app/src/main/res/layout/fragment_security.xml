<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.settings.SecurityFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@strings/security"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/readBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_new_chat"
                    android:text="@strings/done"
                    android:textColor="#0075FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
            android:orientation="vertical"
            tools:ignore="RtlSymmetry"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginBottom="12dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/passTv"
                android:text="@strings/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:visibility="gone"
                android:layout_marginBottom="2dp"
                android:id="@+id/currentPassTv"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/passTv"
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:text="@strings/current_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:visibility="gone"
                android:inputType="textPassword"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/currentPassTv"
                android:layout_marginBottom="17dp"
                android:id="@+id/currentPassEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/visibleCurrentPassBtn"
                android:layout_marginEnd="14dp"
                android:layout_alignTop="@+id/currentPassEt"
                android:layout_alignBottom="@+id/currentPassEt"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_pass_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:layout_marginBottom="2dp"
                android:id="@+id/newPassTv"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/currentPassEt"
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:text="@strings/new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:inputType="textPassword"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/newPassTv"
                android:layout_marginBottom="17dp"
                android:id="@+id/newPassEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <ImageView
                android:id="@+id/visibleNewPassBtn"
                android:layout_marginEnd="14dp"
                android:layout_alignTop="@+id/newPassEt"
                android:layout_alignBottom="@+id/newPassEt"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_pass_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        <TextView
                android:layout_marginBottom="2dp"
                android:id="@+id/repeatNewPass"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/newPassEt"
                android:textSize="14sp"
                android:textColor="#9B9BB6"
                android:text="@strings/password_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:inputType="textPassword"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/repeatNewPass"
                android:layout_marginBottom="30dp"
                android:id="@+id/repeatNewPassEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

        <ImageView
                android:id="@+id/visibleRepeatNewPassBtn"
                android:layout_marginEnd="14dp"
                android:layout_alignTop="@+id/repeatNewPassEt"
                android:layout_alignBottom="@+id/repeatNewPassEt"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_pass_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





    </RelativeLayout>


    <RelativeLayout
            android:orientation="vertical"
            tools:ignore="RtlSymmetry"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:id="@+id/codeTitleTv"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="15dp"
                android:text="@strings/lock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_marginEnd="13dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="14dp"
                android:id="@+id/viewOne"
                android:layout_below="@+id/codeTitleTv"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:layout_marginBottom="16dp"
                android:id="@+id/codeTv"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="@strings/lock_code"
                android:layout_below="@+id/viewOne"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.SwitchCompat
                android:checked="true"
                android:layout_marginEnd="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/codeTv"
                android:layout_alignBottom="@+id/codeTv"
                android:layout_alignParentEnd="true"
                android:theme="@style/SCBSwitch" />

        <View
                android:layout_marginEnd="13dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/viewTwo"
                android:layout_below="@+id/codeTv"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/viewTwo"
                android:id="@+id/changeCodeBtn"
                android:textSize="16sp"
                android:textColor="#0075FF"
                android:text="@strings/change_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/changeCodeBtn"
                android:layout_marginStart="12dp"
                android:text="@strings/set_an_additional_password_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>
</ScrollView>