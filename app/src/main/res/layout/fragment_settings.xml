<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#F9F9F9"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".ui.fragments.settings.SettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="6dp"
            android:background="@android:color/white"
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

           <TextView
                   android:layout_centerInParent="true"
                   android:textStyle="bold"
                   android:textSize="14sp"
                   android:textColor="#333333"
                   android:text="@string/settings"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:background="@drawable/layout_settings_bg"
            android:id="@+id/profileSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:src="@color/colorPrimary" />

        <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/avatar"
                android:text="@string/example_username"
                android:textColor="#333333"
                android:textSize="17sp" />

        <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTv"
                android:layout_alignLeft="@+id/nameTv"
                android:layout_marginTop="1dp"
                android:text="@string/settings_text234"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/emailTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneTv"
                android:layout_alignLeft="@+id/phoneTv"
                android:text="@string/userexamplecom"
                android:textColor="#9B9BB6"
                android:textSize="14sp" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_next_gray" />

    </RelativeLayout>


    <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="8dp">

        <TextView
                android:id="@+id/generalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/general"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        <View
                android:id="@+id/lineOne"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/generalTv"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:id="@+id/notificationsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOne"
                android:layout_marginTop="12dp">

            <TextView
                    android:id="@+id/notificationsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                    android:theme="@style/SCBSwitch"
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/notificationsTv"
                    android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <View
                android:id="@+id/lineTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/notificationsLayout"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:id="@+id/nightThemeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineTwo"
                android:layout_marginTop="12dp">

            <TextView
                    android:id="@+id/nightThemeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/night_theme"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                    android:theme="@style/SCBSwitch"
                    android:id="@+id/switchNightTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/nightThemeTv"
                    android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <View
                android:id="@+id/lineThree"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nightThemeLayout"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:layout_marginBottom="15dp"
                android:id="@+id/languageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineThree"
                android:layout_marginTop="12dp">

            <TextView
                    android:id="@+id/languageTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/languageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/languageTv"
                    android:layout_alignParentEnd="true"
                    android:text="@string/language_selected"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="8dp">

        <TextView
                android:id="@+id/chatSettingsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/chat_settings"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        <View
                android:id="@+id/lineFour"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chatSettingsTv"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:id="@+id/chatBackgroundLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineFour"
                android:layout_marginTop="12dp">

            <TextView
                    android:id="@+id/chatBackgroundLayoutTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_background"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:id="@+id/chatSettingsNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:id="@+id/lineFive"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chatBackgroundLayout"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />


        <RelativeLayout
                android:id="@+id/chatThemeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineFive"
                android:layout_marginTop="12dp">

            <TextView
                    android:id="@+id/chatThemeLayoutTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_a_topic"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:id="@+id/chatThemeNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:id="@+id/lineSix"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chatThemeLayout"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />

        <TextView
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineSix"
                android:layout_marginTop="12dp"
                android:text="@string/delete_all_chats"
                android:textColor="#FF6161"
                android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="8dp">


        <TextView
                android:layout_marginTop="11dp"
                android:id="@+id/otherTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        <View
                android:id="@+id/lineSeven"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/otherTv"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:id="@+id/faqLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineSeven"
                android:layout_marginTop="12dp">

            <TextView
                    android:id="@+id/faqTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_a_topic"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:id="@+id/faqNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>


        <View
                android:id="@+id/lineEight"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/faqLayout"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5" />


        <TextView
                android:id="@+id/logOut"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:layout_below="@+id/lineEight"
                android:textColor="#FF6161"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_out" />
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>