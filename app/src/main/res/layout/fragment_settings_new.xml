<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:orientation="vertical"
        tools:context=".ui.fragments.settings.SettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Настройки"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/profileSettingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/layout_settings_bg">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarIv"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/ic_add_photo" />

                <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/avatarIv"
                        android:text="Kanaevsky"
                        android:textColor="#333333"
                        android:textSize="17sp" />

                <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameTv"
                        android:layout_alignLeft="@+id/nameTv"
                        android:layout_marginTop="1dp"
                        android:text="kanaevsky1989"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp" />

                <TextView
                        android:visibility="gone"
                        android:id="@+id/emailTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phoneTv"
                        android:layout_alignLeft="@+id/phoneTv"
                        android:text="user@example.com"
                        android:textColor="#9B9BB6"
                        android:textSize="14sp" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/ic_next_gray" />

            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp">

                <TextView
                        android:id="@+id/generalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Основные"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                <View
                        android:id="@+id/lineOne"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/generalTv"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/notificationsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineOne"
                        android:layout_marginTop="12dp">

                    <TextView
                            android:id="@+id/notificationsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Уведомления"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                            android:checked="true"
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/notificationsTv"
                            android:layout_alignParentEnd="true"
                            android:theme="@style/SCBSwitch" />

                </RelativeLayout>


                <View
                        android:id="@+id/lineTwo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/notificationsLayout"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/securityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineTwo"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="15dp">

                    <TextView
                            android:id="@+id/securityTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Безопасность"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <ImageView
                            android:id="@+id/securityTvNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="65dp"
                    android:background="@drawable/layout_settings_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp">


                <TextView
                        android:id="@+id/otherTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Другие"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                <View
                        android:id="@+id/lineSeven"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/otherTv"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />


                    <TextView
                            android:layout_below="@+id/lineSeven"
                            android:layout_marginTop="12dp"
                            android:id="@+id/faqTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FAQ"
                            android:textColor="#333333"
                            android:textSize="16sp" />



                <View
                        android:id="@+id/lineEight"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/faqTv"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/lineEight"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">


                    <TextView
                            android:id="@+id/logOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Выйти"
                            android:textColor="#FF6161"
                            android:textSize="16sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>