<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:orientation="vertical"
        tools:context=".ui.fragments.settings.SettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/settings"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp">

                <TextView
                        android:id="@+id/generalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/general"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                <View
                        android:id="@+id/lineOne"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/generalTv"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/notificationsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineOne"
                        android:layout_marginTop="12dp">

                    <TextView
                            android:id="@+id/notificationsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/notifications"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/notificationsTv"
                            android:layout_alignParentEnd="true"
                            android:checked="true"
                            android:theme="@style/SCBSwitch" />

                </RelativeLayout>

                <View
                        android:id="@+id/lineTwo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/notificationsLayout"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/disableInviteLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineTwo"
                        android:layout_marginTop="12dp">

                    <TextView
                            android:id="@+id/disableInviteTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/prevent_add_to_chats"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/disableInviteSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/disableInviteTv"
                            android:layout_alignParentEnd="true"
                            android:checked="false"
                            android:theme="@style/SCBSwitch" />

                </RelativeLayout>

                <View
                        android:id="@+id/lineThree"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/disableInviteLayout"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/securityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineThree"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="15dp">

                    <TextView
                            android:id="@+id/securityTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/security"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <ImageView
                            android:id="@+id/securityTvNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="65dp"
                    android:background="@drawable/layout_settings_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp">

                <TextView
                        android:id="@+id/otherTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/other"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                <View
                        android:id="@+id/lineSeven"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/otherTv"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />


                <TextView
                        android:id="@+id/faqTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineSeven"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/faq"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                <View
                        android:id="@+id/lineEight"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/faqTv"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineEight"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="15dp">

                    <TextView
                            android:id="@+id/logOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/log_out"
                            android:textColor="#FF6161"
                            android:textSize="16sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>