<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#333333"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.profile.wallet.transacations.ConfirmTransactionFragment">

    <ImageView
            android:padding="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="41dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_close_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_success_wallet"
            android:id="@+id/successIv"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

    <TextView
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="26dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:text="Операция выполнена"
            android:layout_below="@+id/successIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyTicketBtn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="#0075FF"
            android:fontFamily="@font/roboto_regular"
            android:text="ЗАКРЫТЬ"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

</RelativeLayout>