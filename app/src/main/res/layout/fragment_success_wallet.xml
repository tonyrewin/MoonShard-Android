<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.mychats.chat.info.tickets.SuccessWalletFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Успех"
                    android:textColor="#333333"
                    android:textSize="14sp" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/layout_settings_bg"
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/successIv"
                android:src="@drawable/ic_success_wallet"
                android:layout_marginTop="73dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="27dp"
                android:layout_below="@+id/successIv"
                android:id="@+id/successTv"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Оплата прошла успешно"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="12dp"
                android:id="@+id/placeWalletTv"
                android:layout_below="@+id/successTv"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:text="Ваши билеты находятся во вкладке «‎Билеты»‎ в вашем профиле"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

       <TextView
                android:layout_centerHorizontal="true"
               android:layout_marginStart="73dp"
                android:text="Списано 1500 ₽ с кошелька"
                android:id="@+id/valueWallet"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/placeWalletTv"
                android:textColor="#9B9BB6"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buyTicketBtn"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#CCE3FF"
                android:fontFamily="@font/roboto_regular"
                android:text="Вернуться в чат"
                android:textColor="#0075FF"
                android:textSize="14sp" />


        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showTicketsBtn"
                android:layout_above="@+id/buyTicketBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0075FF"
                android:fontFamily="@font/roboto_regular"
                android:text="Посмотреть билеты"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


    </RelativeLayout>



</RelativeLayout>