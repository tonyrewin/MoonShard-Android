<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.mychats.chat.info.tickets.TicketsManageFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Управление билетами"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            <TextView
                    android:layout_marginEnd="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Готово"
                    android:textColor="#0075FF"
                    android:textSize="14sp" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/addTicketsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

        <ImageView
                android:id="@+id/presentIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_top_up_wallet" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/presentIcon"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1sp"
                android:text="Добавить билеты"
                android:textColor="#333333"
                android:textSize="16sp" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_next_gray" />

    </RelativeLayout>

        <View
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:id="@+id/scanTicketsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">

            <ImageView
                    android:id="@+id/presentIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_scan_yellow" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/presentIcon2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="Сканировать билеты"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:background="@drawable/layout_settings_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/statisticBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp">

            <ImageView
                    android:id="@+id/presentIcon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_statistic_red" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/presentIcon3"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="Статистика мероприятия"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">

            <ImageView
                    android:id="@+id/presentIcon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_wallet" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/presentIcon4"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="Перейти в кошелек"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>