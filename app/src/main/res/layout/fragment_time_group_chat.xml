<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.create_group.TimeGroupChatFragment">


    <LinearLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/timesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="2sp"
            android:translationY="-0.8sp"
            android:gravity="center_horizontal|top"
            android:textSize="14sp"
            android:textColor="#535353"
            android:text="Пин вашего чата будет виден на карте \n ограниченное время"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>