<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.profile.wallet.WalletFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@strings/your_wallet"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_bold"
                    />


        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#333333"
                android:textSize="34sp"
                android:text="@strings/wallet_text252" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@strings/current_balance"
                android:textColor="#6F6F6F"
                android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">

            <ImageView
                    android:id="@+id/presentIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_top_up_wallet" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/presentIcon"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="@strings/fill_up_a_purse"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:background="#F5F5F5" />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">


            <ImageView
                    android:id="@+id/ticketIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_output_wallet_red" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/ticketIcon"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="@strings/withdraw_funds"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_next_gray" />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:background="#F5F5F5" />

    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/cashFlowTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@strings/cash_flow"
                android:textColor="#333333"
                android:textSize="14sp" />


        <RelativeLayout
                android:layout_marginStart="8dp"
                android:id="@+id/topUpWalletBtn"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/cashFlowTv"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:background="@drawable/wallet_button_default">

            <TextView
                    android:id="@+id/topUpWalletTv"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@strings/replenishment"
                    android:textColor="#333333" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/writeOffBtn"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/topUpWalletBtn"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/cashFlowTv"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:background="@drawable/wallet_button_default">

            <TextView
                    android:id="@+id/writeOffTv"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@strings/writeoff"
                    android:textColor="#333333" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>