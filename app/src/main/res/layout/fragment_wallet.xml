<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F9F9F9"
        tools:context=".ui.fragments.profile.wallet.WalletFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Твой кошелек"
                    android:textColor="#333333"
                    android:textSize="14sp" />


        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical"
                    tools:ignore="RtlSymmetry">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="0 ₽"
                        android:textColor="#333333"
                        android:textSize="34sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Текущий баланс"
                        android:textColor="#6F6F6F"
                        android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_settings_bg"
                    android:orientation="vertical"
                    tools:ignore="RtlSymmetry">

                <RelativeLayout
                        android:id="@+id/fillUpWalletBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp">

                    <ImageView
                            android:id="@+id/presentIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_top_up_wallet" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:layout_toEndOf="@+id/presentIcon"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="1sp"
                            android:text="Пополнить кошелек"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/transferLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp">


                    <ImageView
                            android:id="@+id/transferIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/ic_transfer_money" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="11dp"
                            android:layout_toRightOf="@+id/transferIcon"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:text="Перевести пользователю"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/withDrawBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp">


                    <ImageView
                            android:id="@+id/ticketIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/ic_output_red" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="11dp"
                            android:layout_toRightOf="@+id/ticketIcon"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:text="Вывести средства"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:background="#F5F5F5" />

                <RelativeLayout
                        android:id="@+id/historyBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp">


                    <ImageView
                            android:id="@+id/historyIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_output_red" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_toEndOf="@+id/historyIcon"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:text="История"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_next_gray" />

                </RelativeLayout>


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:background="#F5F5F5" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>