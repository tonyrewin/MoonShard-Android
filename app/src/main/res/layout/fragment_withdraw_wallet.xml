<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        tools:context=".ui.fragments.profile.wallet.withdraw.WithdrawWalletFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="6dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Вывод средств"
                    android:textColor="#333333"
                    android:textSize="14sp" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:id="@+id/balanceLayout"
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="0 ₽"
                android:textColor="#333333"
                android:textSize="34sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Текущий баланс"
                android:textColor="#6F6F6F"
                android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/balanceLayout"
            android:id="@+id/profileSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/layout_settings_bg"
            android:orientation="vertical">

        <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="8dp"
                android:layout_marginStart="11dp"
                android:text="Номер карты получателя"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:textColorHint="#DDDDDD"
                android:hint="Введите название"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="13dp"
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:maxLength="255"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF">

        <EditText
                android:id="@+id/moneyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="80dp"
                android:layout_toLeftOf="@+id/btn"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_bold"
                android:hint="700 ₽"
                android:textColor="#333333"
                android:textColorHint="#DDDDDD"
                android:textSize="34sp" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:background="@drawable/ic_fill_up_enable_full" />

        <ImageButton
                android:id="@+id/nextBtn"
                android:src="@drawable/ic_next_white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_fill_up_disable" />

    </RelativeLayout>

</RelativeLayout>