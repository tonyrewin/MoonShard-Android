<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@drawable/layout_settings_bg"
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="54.5dp"
            android:layout_height="54.5dp"
            android:layout_marginTop="17dp"
            android:id="@+id/profileImage"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_mutabor"
            app:civ_border_color="@android:color/transparent" />


    <ImageView
            android:id="@+id/usersIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage"
            android:src="@drawable/ic_users" />

    <TextView
            android:textStyle="bold"
            android:maxLines="1"
            android:id="@+id/groupNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/usersIv"
            android:text="МЫ ИДЕМ"
            android:textColor="#333333"
            android:textSize="17sp" />

    <TextView
            android:id="@+id/categoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupNameTv"
            android:layout_alignStart="@+id/usersIv"
            android:text="Тусовки"
            android:textColor="#535353"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/valueMembersTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryTv"
            android:layout_alignStart="@+id/categoryTv"
            android:text="666 members, 30 online"
            />


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F9F9F9" />

</RelativeLayout>