<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="8dp"
            android:layout_width="54.5dp"
            android:layout_height="54.5dp"
            android:layout_marginTop="17dp"
            android:id="@+id/avatarEvent"
            android:layout_alignParentStart="true"
            tools:src="@drawable/ic_mutabor"
            app:civ_border_color="@android:color/transparent" />


    <ImageView
            android:id="@+id/usersIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/avatarEvent"
            android:src="@drawable/ic_users" />

    <TextView
            android:textStyle="bold"
            android:maxLines="1"
            android:id="@+id/groupNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/usersIv"
            tools:text="we_are_walking"
            android:textColor="#333333"
            android:textSize="17sp" />

    <TextView
            android:visibility="gone"
            android:id="@+id/categoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupNameTv"
            android:layout_alignStart="@+id/usersIv"
            tools:text="@string/party"
            android:textColor="#535353"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/valueMembersTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryTv"
            android:layout_alignStart="@+id/categoryTv"
            tools:text="text268"
            />

    <View
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F9F9F9" />

</RelativeLayout>