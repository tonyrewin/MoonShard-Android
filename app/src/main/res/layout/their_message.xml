<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:clipToPadding="false">

    <RelativeLayout
            android:layout_marginBottom="15dp"
            android:id="@+id/layoutMessage"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginStart="5dp"
            android:paddingLeft="15dp">


        <TextView
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#9B9BB6"
                android:layout_marginBottom="4dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                tools:text="Rose" />

        <LinearLayout
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/name"
                android:layout_marginStart="50dp"
                android:id="@+id/layoutBodyMessage"
                android:background="@drawable/their_message"
                android:elevation="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/mainImage"
                    tools:src="@drawable/palmy"
                    android:scaleType="fitXY"
                    android:maxHeight="250dp"
                    android:minWidth="270dp"
                    android:minHeight="200dp"/>

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/fileIv"
                    android:layout_width="270dp"
                    android:layout_height="152dp"
                    android:layout_below="@+id/message_body"
                    tools:src="@drawable/palmy" />

            <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="6dp"
                    android:id="@+id/message_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    tools:text="H" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignBottom="@+id/layoutBodyMessage"
                android:id="@+id/avatar"
                android:layout_width="34dp"
                android:layout_height="34dp"
                tools:src="@color/blue" />

        <RelativeLayout
                android:layout_marginRight="32dp"
                android:visibility="gone"
                android:id="@+id/layoutFile"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/name"
                android:layout_marginStart="50dp"
                android:background="@drawable/their_message"
                android:elevation="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_marginStart="17dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/iconLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:src="#2ECBDA"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                <ImageView
                        android:id="@+id/statusFileIv"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ProgressBar
                        android:id="@+id/progressBarFile"
                        android:visibility="gone"
                        android:layout_marginStart="-4dp"
                        android:layout_marginBottom="-4dp"
                        android:layout_marginTop="-4dp"
                        android:indeterminateDrawable="@drawable/progress_bar_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/nameFile"
                    android:layout_toEndOf="@+id/iconLayout"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:lineSpacingExtra="0sp"
                    android:gravity="top"
                    tools:text="App-release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:maxLines="1"
                    android:layout_marginStart="13dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#9B9BB6"
                    android:lineSpacingExtra="2sp"
                    android:translationY="-0.97sp"
                    android:id="@+id/sizeFile"
                    android:layout_below="@+id/nameFile"
                    android:layout_toRightOf="@+id/iconLayout"
                    android:gravity="top"
                    tools:text="105 MB APK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>