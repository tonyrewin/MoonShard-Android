<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="12dp"
        android:clipToPadding="false">

    <RelativeLayout
            android:id="@+id/layoutBodyMessage"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginStart="5dp"
            android:paddingLeft="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="34dp"
                android:layout_height="34dp"
                tools:src="@color/blue" />

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/avatar"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/avatar"
                android:paddingBottom="4dp"
                tools:text="Rose" />

        <LinearLayout
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:layout_alignLeft="@+id/name"
                android:layout_below="@+id/name"
                android:background="@drawable/their_message"
                android:elevation="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/fileIv"
                    android:layout_width="270dp"
                    android:layout_height="152dp"
                    android:layout_below="@+id/message_body"
                    tools:src="@drawable/palmy" />

            <TextView
                    android:id="@+id/message_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    tools:text="How are you doing? This is a long message that should probably wrap." />

        </LinearLayout>


    </RelativeLayout>



    <com.google.android.material.imageview.ShapeableImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/mainFile"
            tools:src="@drawable/palmy"
            android:scaleType="fitXY"
            android:minWidth="270dp"
            android:minHeight="270dp"/>

</RelativeLayout>