<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:clipToPadding="false">

    <RelativeLayout
            android:layout_marginBottom="15dp"
            android:id="@+id/layoutBodyMessage"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginStart="5dp"
            android:paddingLeft="15dp">


        <TextView
                android:layout_marginBottom="4dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                tools:text="Rose" />

        <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/name"
                android:layout_marginStart="50dp"
                android:id="@+id/blabla"
                android:background="@drawable/their_message"
                android:elevation="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/mainFile"
                    tools:src="@drawable/palmy"
                    android:scaleType="fitXY"
                    android:minWidth="270dp"
                    android:minHeight="270dp"/>

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/fileIv"
                    android:layout_width="270dp"
                    android:layout_height="152dp"
                    android:layout_below="@+id/message_body"
                    tools:src="@drawable/palmy" />

            <TextView
                    android:padding="10dp"
                    android:id="@+id/message_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    tools:text="How are you doing? This is a long message that should probably wrap." />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignBottom="@+id/blabla"
                android:id="@+id/avatar"
                android:layout_width="34dp"
                android:layout_height="34dp"
                tools:src="@color/blue" />
    </RelativeLayout>
</RelativeLayout>