<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:id="@+id/typeTicketTv"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="Абонемент"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="12dp"
            android:id="@+id/ticketDescriptionTv"
            android:layout_below="@+id/typeTicketTv"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#9B9BB6"
            android:textSize="12sp"
            android:text="Билет на все дни фестиваля"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/costTicketTv"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/ticketDescriptionTv"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="300 ₽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/viewLine"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/costTicketTv"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <ImageButton
            android:id="@+id/minusBtn"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/counterLayout"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_minus"
            android:background="@drawable/btn_minus_background"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    <RelativeLayout
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/plusBtn"
            android:id="@+id/counterLayout"
            android:background="@drawable/counter_gray_background"
            android:layout_width="32dp"
            android:layout_height="40dp">

        <TextView
                android:id="@+id/counterTv"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000000"
                android:text="0"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageButton
            android:id="@+id/plusBtn"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_plus_background"
            android:src="@drawable/ic_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


</RelativeLayout>