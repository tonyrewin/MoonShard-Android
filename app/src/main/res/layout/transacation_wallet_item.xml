<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/typeOperationIv"
            android:layout_marginStart="9dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_replenishment_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/nameTransaction"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/typeOperationIv"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#333333"
            android:text="@string/refill_wallet"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#0075FF"
            android:text="+5000 â‚½"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <View
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#F5F5F5"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/typeOperationIv"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</RelativeLayout>