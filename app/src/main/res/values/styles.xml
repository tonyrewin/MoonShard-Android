<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#0075FF</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/logo</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>



    <style name="MainAppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="MainToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="MainTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetAppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="BottomSheetToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="BottomSheetTabLayoutStyle" parent="MainTabLayoutStyle">
        <item name="tabIndicatorColor">#333333</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ScrollItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="ScrollItem.A">
        <item name="android:background">?attr/colorControlHighlight</item>
    </style>

    <style name="ScrollItem.B">
        <item name="android:background">?attr/colorAccent</item>
    </style>

</resources>
